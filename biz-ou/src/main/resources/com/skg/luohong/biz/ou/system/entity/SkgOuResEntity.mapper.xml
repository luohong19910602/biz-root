<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.skg.luohong.biz.ou.system.entity.SkgOuResMapper">
    <resultMap id="SkgOuResEntity" type="com.skg.luohong.biz.ou.system.entity.SkgOuResEntity">
		    <result column="id_" property="id"/>
		    <result column="subsys_id_" property="subsysId"/>
		    <result column="name_" property="name"/>
		    <result column="type_" property="type"/>
		    <result column="content_" property="content"/>
		    <result column="parent_id_" property="parentId"/>
		    <result column="path_" property="path"/>
		    <result column="depth_" property="depth"/>
		    <result column="icon_" property="icon"/>
		    <result column="is_actived_" property="isActived"/>
		    <result column="sort_" property="sort"/>
		    <result column="belong_" property="belong"/>
	</resultMap>

	<select id="findAll" resultMap="SkgOuResEntity">
		select * from skg_ou_res
	</select>
	
	<insert id="insert" parameterType="com.skg.luohong.biz.ou.system.entity.SkgOuResEntity">
	    insert into users (
		    id_, subsys_id_, name_, type_, content_, parent_id_, path_, depth_, icon_, is_actived_, sort_, belong_
	    ) values (
	        #{id}, #{subsysId}, #{name}, #{type}, #{content}, #{parentId}, #{path}, #{depth}, #{icon}, #{isActived}, #{sort}, #{belong}
	    )
	</insert>
	
	<!-- 更新一条记录 -->  
    <update id="updateSkgOuResEntity" parameterType="com.skg.luohong.biz.ou.system.entity.SkgOuResEntity">  
        update skg_ou_res set #{subsysId}, #{name}, #{type}, #{content}, #{parentId}, #{path}, #{depth}, #{icon}, #{isActived}, #{sort}, #{belong} where id_ = #{id} 
    </update> 
    
    <delete id="deleteById" statementType="PREPARED" timeout="20">
        delete from skg_ou_res where id_ =  ${id}
    </delete>
</mapper>